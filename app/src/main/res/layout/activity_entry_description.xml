<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.liuk.mycbt.EntryDescriptionActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@android:drawable/ic_menu_info_details"
        android:layout_marginLeft="5dp"
        android:layout_gravity="right" />

    <TextView
        android:text="Describe what happened and why it made you feel this way."
        android:textSize = "22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/description_text"
        android:layout_weight="0.57"
        android:background="@android:drawable/editbox_background_normal"
        android:text="e.g. This happened and it made me feel this because..." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/to_distortions"
        android:layout_gravity="right" />

</LinearLayout>
