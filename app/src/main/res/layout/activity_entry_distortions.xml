<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.liuk.mycbt.EntryDistortionsActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@android:drawable/ic_menu_info_details"
        android:layout_marginLeft="5dp"
        android:layout_gravity="right" />

    <TextView android:text=""
        android:layout_width="fill_parent"
        android:id="@+id/prev_description"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true" />

    <TextView android:text="What distortions do you see in these thoughts?"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distortion_list"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/to_home"
        android:layout_gravity="right"
        android:onClick="endPage"/>

</LinearLayout>
